@model ConferenceRoomBooking.DataLayer.Entities.ConferenceRoom
@{
    ViewData["Title"] = "Create Conference Room";
}

<h1>Create Conference Room</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaximumCapacity"></label>
        <input asp-for="MaximumCapacity" class="form-control" />
        <span asp-validation-for="MaximumCapacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
