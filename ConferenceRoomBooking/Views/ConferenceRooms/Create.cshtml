@{
    ViewData["Title"] = "ConferenceRooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ConferenceRoom

<h1>Create Conference Room</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaximumCapacity" class="control-label"></label>
        <input asp-for="MaximumCapacity" class="form-control" />
        <span asp-validation-for="MaximumCapacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
