@model IEnumerable<ConferenceRoomBooking.DataLayer.Entities.Booking>
@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create">Create New Booking</a>
<h1>Bookings</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Code</th>
            <th>Room</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Code</td>
                <td>@booking.Room.Code</td>
                <td>@booking.StartDate</td>
                <td>@booking.EndDate</td>
                <td>@booking.IsConfirmed</td>
                <td class="table-actions">
                    <a href="/Bookings/Edit/@booking.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Bookings/Delete/@booking.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Bookings/Create" class="btn btn-success">Create New Booking</a>



