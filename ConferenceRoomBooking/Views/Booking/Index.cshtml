@model IEnumerable<ConferenceRoomBooking.DataLayer.Entities.Booking>

<h1>Bookings</h1>

<p>
    <a asp-action="Create">Create New Booking</a>
</p>

<p>
    @using (Html.BeginForm("Index", "Booking", FormMethod.Get))
    {
        <label> Filter</label>
        @Html.TextBox("filterTerm")
        ;
        <input type="submit" value="Filter" />
    }
</p>

<div class="card">
    <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Room</th>
                        <th>Number of People</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Room.Code</td>
                    <td>@item.NumberOfPeople</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.IsConfirmed</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
  